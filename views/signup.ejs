<% include ../Metadata/header %>
<div class="ui padded inverted segment container">
	<div class="ui centered padded grid segment">
	<div class="four column row" >
		<div class="column">
			<h1 class="ui red ribbon label massive">Sign Up For Cypher</h1>
		</div>
	</div>
    <div class="four column row">
	  <form class="ui equal width large form" action="/sign/up" method="post">
	    <div class="fields two column row">
			<div class="field column">
				<label>Full Name</label>
				<input type="text" name="name" placeholder="Full Name">
			</div>
			<div class="field column">
	        	<label>Username</label>
	        	<input  type="text" name="username" placeholder="abcde">
	      	</div>
		</div>
		<div class="fields two column row">
			<div class="field column">
				<label>Contact no</label>
				<input type="text" name="contact" placeholder="75XXXXXX">
			</div>
			<div class="field column">
				<label>Email</label>
				<input type="text" name="email" placeholder="xyz@xyc.com">
			</div>
		</div>
	    <div class="fields two column row">
	      <div class="field column">
	        <label>Gender</label>
	        <select class="ui compact selection menu" name="gender">
	        	<option value="male" selected="true">Male</option>
	        	<option value="female">Female</option>
	        	<option value="Othe">Other</option>
	        </select>
	      </div>
	      <div class="field column">
	        <label>Job Title</label>
	        <select name="role" class="ui compact selection menu" style="max-height:30px;">
	        	<option value="Teacher">Teacher</option>
	        	<option value="Student" selected="true">Student</option>
	        	<option value="Other">Other</option>
	        </select>
	      </div>
	    </div>
	    <div class="fields two column row">
	      <div class="field column">
	        <label>Password</label>
	        <input placeholder="*******" type="Password" name="password">
	      </div>
	      <div class="field column">
	        <label>Confirm Password</label>
	        <input placeholder="*******" type="Password" name="cnfpassword">
	      </div>
	    </div>
	    <input type="submit" class="ui submit blue button" value="Sign Up">
	 	</form>
	  </div>
	</div>
</div>
<% include ../Metadata/footer %>